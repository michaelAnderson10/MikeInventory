<Window x:Class="MikeInventory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MikeInventory"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="1" Text="MIKE INVENTORY MANAGER" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <DataGrid Grid.Row="3" Grid.Column="1" x:Name="MyDataGrid"/>

        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="BtnCreate" Height="25" Width="125" Margin="5" Content="CREATE" FontWeight="Bold" FontSize="16" Click="BtnCreate_Click" />
            <Button x:Name="BtnRead" Height="25" Width="125" Margin="5" Content="READ" FontWeight="Bold" FontSize="16" Click="BtnRead_Click" />
            <Button x:Name="BtnUpdate" Height="25" Width="125" Margin="5" Content="UPDATE" FontWeight="Bold" FontSize="16" Click="BtnUpdate_Click" />
            <Button x:Name="BtnDelete" Height="25" Width="125" Margin="5" Content="DELETE" FontWeight="Bold" FontSize="16" Click="BtnDelete_Click" />
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox x:Name="TxtSearch" Height="25" Width="395" Margin="5"/>
            <Button x:Name="BtnSearch" Height="25" Width="125" Margin="5" Content="SEARCH" FontSize="16" FontWeight="Bold" Click="BtnSearch_Click"/>
        </StackPanel>
    </Grid>
</Window>
