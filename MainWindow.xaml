<Window x:Class="MikeInventory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MikeInventory"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="940">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1" Grid.Column="0" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="1.2*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <ComboBox x:Name="CmbCategory" Height="20" Width="100" Margin="5 1 1 5" />
                    <TextBox  x:Name="TxtId" Height="20" Width="100" Margin="5 1 1 5"/>
                    <TextBox  x:Name="TxtDescription" Height="20" Width="100" Margin="5 1 1 5"/>
                    <TextBox  x:Name="TxtQty" Height="20" Width="100" Margin="5 1 1 5"/>
                    <TextBox x:Name="TxtSupplier" Height="20" Width="100" Margin="5 1 1 5" />
                    <TextBox x:Name="TxtTag" Height="20" Width="100" Margin="5 1 1 5" />
                </StackPanel>
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <TextBlock Width="100" Height="20" Margin="5 1 1 5" Text="Category" TextAlignment="Center"/>
                    <TextBlock Width="100" Height="20" Margin="5 1 1 5" Text="Part No" TextAlignment="Center"/>
                    <TextBlock Width="100" Height="20" Margin="5 1 1 5" Text="Description" TextAlignment="Center"/>
                    <TextBlock Width="100" Height="20" Margin="5 1 1 5" Text="Stock Quantity" TextAlignment="Center"/>
                    <TextBlock Width="100" Height="20" Margin="5 1 1 5" Text="Supplier" TextAlignment="Center"/>
                    <TextBlock Width="100" Height="20" Margin="5 1 1 5" Text="Tags" TextAlignment="Center"/>
                </StackPanel>

            </Grid>

            <DataGrid Grid.Row="2" Grid.Column="0" x:Name="DatagridMain" SelectionChanged="DatagridMain_SelectionChanged"/>

            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:Name="BtnCreate" Height="20" Width="100" Margin="5 1 1 5" BorderThickness="0" Content="Create" FontWeight="Bold" FontSize="12" Click="BtnCreate_Click" />
                <Button x:Name="BtnRead" Height="20" Width="100" Margin="5 1 1 5" BorderThickness="0" Content="Read" FontWeight="Bold" FontSize="12" Click="BtnRead_Click" />
                <Button x:Name="BtnUpdate" Height="20" Width="100" Margin="5 1 1 5" BorderThickness="0" Content="Update" FontWeight="Bold" FontSize="12" Click="BtnUpdate_Click" />
                <Button x:Name="BtnDelete" Height="20" Width="100" Margin="5 1 1 5" BorderThickness="0" Content="Delete" FontWeight="Bold" FontSize="12" Click="BtnDelete_Click" />
                <Button x:Name="BtnClear" Height="20" Width="100" Margin="5 1 1 5" BorderThickness="0" Content="Clear" FontWeight="Bold" FontSize="12" Click="BtnClear_Click" />
            </StackPanel>
            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="BtnSearch" Height="20" Width="100" Margin="5" BorderThickness="0" Content="Search" FontSize="12" FontWeight="Bold" Click="BtnSearch_Click"/>
                <TextBox x:Name="TxtSearch" Height="20" Width="150" Margin="5"/>
            </StackPanel>

        </Grid>

        <TextBlock Grid.Row="0" Grid.Column="1" Text="MIKE INVENTORY MANAGER" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center"/>

    </Grid>
    
</Window>
