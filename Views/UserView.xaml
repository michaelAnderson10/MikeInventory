<UserControl
    x:Class="MikeInventory.Views.UserView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModels="clr-namespace:MikeInventory.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MikeInventory.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="77*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="10*" />
            </Grid.RowDefinitions>

            <Grid.DataContext>
                <ViewModels:UserViewModel />
            </Grid.DataContext>

            <TextBlock
                Width="100"
                Height="30"
                FontSize="20"
                FontWeight="Bold"
                Text="Users" />

            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                HorizontalAlignment="Left"
                Orientation="Horizontal">
                <Button
                    x:Name="BtnCreateUser"
                    Click="BtnCreateUser_Click"
                    Content="Create" />
                <Button x:Name="BtnUpdateUser" Content="Update" />
                <Button x:Name="BtnDeleteUser" Content="Delete" />
                <Button x:Name="BtnClearUser" Content="Clear" />
            </StackPanel>
            <StackPanel Grid.Row="3" Orientation="Horizontal">
                <TextBox x:Name="TxtIdUser" Text="{Binding UserId, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox x:Name="TxtFirstName" Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox x:Name="TxtLastName" Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox x:Name="TxtPhoneUser" Text="{Binding UserPhoneNo, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox x:Name="TxtEmailUser" Text="{Binding UserEmail, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox x:Name="TxtTagUser" Text="{Binding UserTag, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <TextBlock Text="User Id" />
                <TextBlock Text="First Name" />
                <TextBlock Text="Last Name" />
                <TextBlock Text="Phone No" />
                <TextBlock Text="Email" />
                <TextBlock Text="Tags" />
            </StackPanel>

            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button x:Name="BtnSearchUser" Content="Search" />
                <TextBox
                    x:Name="TxtSearchUser"
                    Width="150"
                    Height="20" />
            </StackPanel>

            <!--<DataGrid Grid.Row="4" Grid.Column="1" x:Name="DatagridUser" Margin="5" ItemsSource="{Binding Users}" />-->
            <Grid Grid.Row="4">
                <DataGrid
                    x:Name="DatagridUser"
                    AutoGenerateColumns="False"
                    ItemsSource="{Binding Users}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding UserId}" Header="User Id" />
                        <DataGridTextColumn Binding="{Binding FirstName}" Header="First Name" />
                        <DataGridTextColumn Binding="{Binding LastName}" Header="Last Name" />
                        <DataGridTextColumn Binding="{Binding UserPhoneNo}" Header="Phone No" />
                        <DataGridTextColumn Binding="{Binding UserEmail}" Header="Email" />
                        <DataGridTextColumn Binding="{Binding UserTag}" Header="Tags" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
