<UserControl x:Class="MikeInventory.Views.Tool"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MikeInventory.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="77*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="134"/>
            <ColumnDefinition Width="523*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:Name="BtnCreate"  Content="Create" />
                <Button x:Name="BtnUpdate" Content="Update"/>
                <Button x:Name="BtnDelete" Content="Delete"/>
                <Button x:Name="BtnClear" Content="Clear"/>
                <Button x:Name="BtnSearch" Content="Search"/>
                <TextBox x:Name="TxtSearch" Height="20" Width="160"/>
            </StackPanel>
            <StackPanel Grid.Row="2" Orientation="Horizontal" Background="White" Margin="5 3 3 5">
                <TextBlock Text="Part No" />
                <TextBlock Text="Description" />
                <TextBlock Text="Stock Quantity" />
                <TextBlock Text="Supplier" />
                <TextBlock Text="Tags" />
            </StackPanel>
            <StackPanel Grid.Row="3" Orientation="Horizontal">
                <TextBox  x:Name="TxtId" />
                <TextBox  x:Name="TxtDescription" />
                <TextBox  x:Name="TxtQty" />
                <TextBox x:Name="TxtSupplier"  />
                <TextBox x:Name="TxtTag" />
            </StackPanel>
            <DataGrid Grid.Row="4" Grid.Column="0" x:Name="DatagridMain"/>
            

        </Grid>

    </Grid>


</UserControl>
